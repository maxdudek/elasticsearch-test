{
    "settings": {
        "index": {
            "mapping.total_fields.limit": 10000,
            "number_of_replicas": "1",
            "number_of_shards": "3"
        },
        "analysis": {
            "analyzer": {
                "errors_analyzer": {
                    "tokenizer": "errors_tokenizer",
                    "char_filter": [
                        "hostname_char_filter",
                        "pid_char_filter",
                        "timestamp_char_filter",
                        "erase_char_filter"
                    ],
                    "filter": [
                        "trim",
                        "length_filter"
                    ]
                }
            },
            "char_filter": {
                "hostname_char_filter": {
                    "type": "pattern_replace",
                    "pattern": "(cpn|viz)-...-..(-..)?",
                    "replacement": ""
                },
                "pid_char_filter": {
                    "type": "pattern_replace",
                    "pattern": "for pid \\d+",
                    "replacement": "for pid xxxxx"
                },
                "timestamp_char_filter": {
                    "type": "pattern_replace",
                    "pattern": "timestamp \\d+\\.\\d+",
                    "replacement": "timestamp xxxxxxxxxx"
                },
                "erase_char_filter": {
                    "type": "pattern_replace",
                    "pattern": "((f|d)\\d\\dn\\d\\d)|(k\\d\\dn\\d\\d(s\\d\\d)?)",
                    "replacement": ""
                }
            },
            "tokenizer": {
                "errors_tokenizer": {
                    "type": "pattern",
                    "pattern": "\\{|\\}|\\[|\\]|\"|'|(\\\\n)|\\\\|:|,"
                },
                "comma_tokenizer": {
                    "type": "pattern",
                    "pattern": ","
                }
            },
            "filter" : {
                "length_filter" : {
                    "type" : "predicate_token_filter",
                    "script" : {
                        "source" : "token.getTerm().length() > 1"  
                    }
                }
            }
        }
    }
}